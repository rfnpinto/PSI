@model IEnumerable<Tarefas.Models.Tarefa>

@{
    ViewBag.Title = "Index";
}

<h2>Página Inicial - Lista</h2>

<p>
    @Html.ActionLink("Criar nova Nota", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lido)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nota)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lido)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_Tarefa }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ID_Tarefa }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.ID_Tarefa })
        </td>
    </tr>
}

</table>
